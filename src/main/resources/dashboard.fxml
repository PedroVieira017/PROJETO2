<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.ipvc.projeto2Final.controllers.DashboardController"
      spacing="20" alignment="CENTER" style="-fx-padding: 20;">

    <Label text="Painel de Estatísticas" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <PieChart fx:id="pieChartQuartos" prefHeight="300" prefWidth="500" />

    <BarChart fx:id="barChartReservas" title="Reservas Ativas" prefHeight="300" prefWidth="500">
        <xAxis>
            <CategoryAxis label="Status" />
        </xAxis>
        <yAxis>
            <NumberAxis label="Número de Reservas" />
        </yAxis>
    </BarChart>

</VBox>
